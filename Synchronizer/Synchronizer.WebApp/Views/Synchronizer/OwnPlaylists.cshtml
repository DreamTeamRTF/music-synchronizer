@model MusicServices.Models.Playlist[]

@{
    ViewBag.Title = "Плейлисты";
    Layout = "_Layout";
}

<h2>Плейлисты</h2>
<ul class="list-group list-group-horizontal list-group-flush" style="overflow-x: auto">
    @foreach (var playlist in Model)
    {
        <li class="list-group-item">
            <div class="card h-100" style="width: 20rem; max-width: 20rem;">
                <!-- Playlist image-->
                <div class="border border-opacity-10 border-3 align-self-center"
                    style="height: 14rem; max-height: 14rem; max-width: 14rem; margin: 0.5rem; min-width: 14rem; background-color: #d9d9d98c;">
                    <img class="img-fluid mx-auto d-block" style="height: 100%" src="@playlist.ImageUrl" alt="Картинка плейлиста" />
                </div>
                <!-- Playlist details-->
                <div class="card-body p-4">
                    <div class="text-center">
                        <!-- Playlist name-->
                        <h5 class="fw-bolder">@playlist.Title</h5>
                    </div>
                </div>
                <!-- Playlist actions-->
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <form method="post" asp-controller="Synchronizer" asp-action="SynchronizePlaylist" asp-route-musicService="YandexMusic" asp-route-playlistId="@playlist.Id">
                            <input class="rounded-pill" type="submit" style="background-color: #b7c7e987;" value="Синхронизация"/>
                        </form>
                    </div>
                </div>
            </div>
        </li>
    }
</ul>