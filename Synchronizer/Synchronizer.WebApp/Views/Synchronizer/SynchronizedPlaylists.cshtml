@model Synchronizer.WebApp.Models.Synchronizer.Playlists.SynchronizedPlaylistsModel

@{
    ViewBag.Title = "Синхронизированные плейлисты";
    Layout = "_Layout";
}

<h2>Синхронизированные плейлисты</h2>
<div class="container">
    <div class="row">
        @foreach (var playlist in Model.Playlists)
        {
            <div class="card h-100" style="width: 20rem; max-width: 20rem; display: inline-flex; margin: 0.1rem;">
                <!-- Playlist image-->
                <div class="border border-opacity-10 border-3 align-self-center justify-content-end"
                     style="height: 14rem; max-height: 14rem; max-width: 14rem; margin: 0.5rem; min-width: 14rem; background-color: #d9d9d98c;">
                <img class="img-fluid mx-auto d-block" style="height: 100%" src="@playlist.CoverImage" alt="Картинка плейлиста" />
            </div>
            <!-- Playlist details-->
            <div class="card-body p-4">
                <div class="text-center">
                    <!-- Playlist name-->
                    <h5 class="fw-bolder">@playlist.Title</h5>
                </div>
                <div class="text-center">
                    <!-- Playlist name-->
                    <h5 class="fw-bolder">@playlist.ServiceType.ToString()</h5>
                </div>
                <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                    <div class="text-center">
                        <form method="post" asp-controller="Synchronizer" asp-action="UpdateSynchronizedPlaylist" asp-route-musicService="@playlist.ServiceType" asp-route-playlistId="@playlist.PlaylistId">
                            <input class="rounded-pill" type="submit" style="background-color: #b7c7e987;" value="Обновить"/>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>